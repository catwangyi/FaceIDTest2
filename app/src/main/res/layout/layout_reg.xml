<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:background="@color/colorPrimary"
              android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingTop="50dp"
        android:layout_height="wrap_content">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="100dp"
            android:id="@+id/userimg"
            android:src="@mipmap/sendimg"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="100dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="账号："
                android:textSize="20dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et_id_reg"
                android:layout_width="match_parent"
                android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:hint="请输入账号"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="密码："
                android:textSize="20dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et_pwd_reg"
                android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:hint="请输入密码"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="重复密码："
                android:textSize="20dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et_pwd_confirm_reg"
                android:inputType="textPassword"
                android:layout_width="match_parent"
                android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ"
                android:hint="请重复密码"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="姓名："
                android:textSize="20dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et_name_reg"
                android:layout_width="match_parent"
                android:hint="请输入姓名"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="联系电话："
                android:textSize="20dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et_phone_reg"
                android:layout_width="match_parent"
                android:digits="0123456789"
                android:hint="请输入电话"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="邮箱："
                android:textSize="20dp"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et_email_reg"
                android:layout_width="match_parent"
                android:hint="请输入邮箱"
                android:digits="0123456789abcdefghigklmnopqrstuvwxyzABCDEFGHIJKLMNOPQRSTUVWXYZ.@_-"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <Button
            android:id="@+id/reg"
            android:layout_width="match_parent"
            android:text="注册"
            android:textSize="20dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</LinearLayout>
